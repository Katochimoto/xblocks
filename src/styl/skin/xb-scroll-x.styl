skin-islands-xb-scroll-x()
  overflow-y: scroll
  overflow-x: hidden
  tap-highlight-color: rgba(#000, 0)
  transform: translateZ(0)
  margin-right: -15px

  background: no-repeat
  background-image: radial-gradient(50% 0,farthest-side,rgba(0,0,0,.2),rgba(0,0,0,0)), radial-gradient(50% 100%,farthest-side,rgba(0,0,0,.2),rgba(0,0,0,0)), linear-gradient(rgba(0,0,0,.05),rgba(0,0,0,.05)), linear-gradient(rgba(0,0,0,.05),rgba(0,0,0,.05))
  background-position: 0 0,0 100%,0 0,0 100%
  background-size: 100% 5px,100% 5px,100% 1px,100% 1px
  z-index: 1

  &:after,
  &:before
    content: ""
    top: auto
    left: auto
    z-index: -1
    display: block
    height: 45px
    width: auto
    border: 0
    margin: 0 0 -45px
    border-radius: 0
    background: linear-gradient(to bottom,#fff 10%,rgba(255,255,255,0) 100%)

  &:after
    top: 1px
    margin: -45px 0 0
    background: linear-gradient(to bottom,rgba(255,255,255,0) 10%,#fff 100%)

  @media screen and (-webkit-min-device-pixel-ratio:0)
    margin-right: auto !important

    &::-webkit-scrollbar
      width: 0 !important
