@import "styl/mixins"

@import "../node_modules/stylobate"
rem = rem_px;
@import "../node_modules/stylobate-islands"
set-skin-namespace('islands');

xb-button,
xb-input,
xb-ico,
xb-select,
xb-checkbox,
xb-radio,
xb-link
  display: inline-block

  & *, *:before, *:after
    box-sizing: initial

xb-option,
xb-optgroup,
xb-dropdown
  display: block


@import "styl/vars/colors"
@import "styl/vars/layout"

@import "blocks/ico/ico"
@import "blocks/link/link"
@import "blocks/button/button"
@import "blocks/input/input"
@import "blocks/checkbox/checkbox"
@import "blocks/radio/radio"

@import "styl/global"
@import "styl/check"
@import "styl/file-intruder"