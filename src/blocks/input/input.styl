.xb-input

  &._simple
    kind: input
    skin: input
    font-family: Arial, sans-serif
    -webkit-appearance: textfield

  &._complex
    kind: field $islands_s $islands_s
    skin: input-box

    & > ._content
      kind: field-content

      & > ._controller
        kind: input top
        z-index: 9
        width: 100%
        height: 100%

      & > textarea
        vertical-align: top
        resize: none

      & > ._view
        border: 1px solid transparent
        kind: fill -1px
        skin: input-view no-focus

    &:not(._disabled):focus,
    &:not(._disabled)._focused
      & > ._content > ._view
        skin: input_focus

    & ._reset
      kind: field-right 0.5 * $islands_s
      margin-right: $islands_s * -1
      height: auto

      &:before
        content: " " // utf nbsp here

    & > ._left
      kind: field-left 0.5 * $islands_s
      margin-left: $islands_s * -1
      height: auto

    & > ._right
      kind: field-right 0.5 * $islands_s
      margin-right: $islands_s * -1
      height: auto


  &._focused
    skin: input_focus

  &._disabled
    skin: disabled

  &._autosize
    width: auto !important


  &._size-s
    skin: input small

  &._size-l
    skin: input large

  &._size-xl
    skin: input xlarge