xb-input
  skin: xb-inline-block

.xb-input

  &._simple
    kind: input
    skin: input
    font-family: Arial, sans-serif
    -webkit-appearance: textfield

    &._size-s
      skin: input small

    &._size-l
      skin: input large

    &._size-xl
      skin: input xlarge

    &._focused:not(:focus)
      skin: input_focus

    &._ghost:not(:focus):not(:hover):not(._focused)
      border: none
      background: none
      box-shadow: none


  &._complex
    kind: field $islands_s $islands_s
    skin: input-box
    font-weight: inherit

    &._size-s
      skin: input-box small

    &._size-l
      skin: input-box large

    &._size-xl
      skin: input-box xlarge

    & > ._content
      kind: field-content

      & > ._controller
        kind: input top
        z-index: 9
        width: 100%
        height: 100%
        font-family: Arial, sans-serif
        -webkit-appearance: textfield

      & > textarea._controller
        vertical-align: top
        resize: none

      & > ._view
        border: 1px solid transparent
        kind: fill -1px
        skin: input-view no-focus


    & > ._reset
      kind: field-right 0.5 * $islands_s
      skin: icon _remove with-hover
      margin-right: $islands_s * -1
      height: auto

      &:before
        content: "Â " // utf nbsp here

    & > ._left
      kind: field-left 0.5 * $islands_s
      margin-left: $islands_s * -1
      height: auto

    & > ._right
      kind: field-right 0.5 * $islands_s
      margin-right: $islands_s * -1
      height: auto

    & > ._hint
      skin: 'input-placeholder' (-inner '& > ._hint-inner') (-ghost '& > ._hint-ghost')

    &._size-s
      & > ._hint
        & > ._hint-inner
          line-height: $islands_m
          font-size: $islands_text_s


  &._complex:not(._disabled)
    & > ._content
      & > ._controller:focus + ._view
        skin: input_focus

  &._complex._focused:not(._disabled)
    & > ._content
      & > ._controller:not(:focus) + ._view
        skin: input_focus


  &._complex._ghost:not(._focused):not(:hover)
    & > ._content
      & > ._controller:not(:focus) + ._view
        border: none
        background: none
        box-shadow: none

  &._autosize
    width: auto !important
