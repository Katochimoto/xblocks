xb-menu
  skin: xb-inline-block
  display: none

  &.xb-menu-enabled
    display: inline-block

  & > ._popup
    skin: popup
    position: relative
    overflow: hidden
    padding: 0
    outline: none
    touch-action: none
    -webkit-touch-callout: none
    touch-callout: none
    user-select: none
    text-size-adjust: none

    &:before,
    &:after
      margin: 0
      display: none

    &:focus
      box-shadow: 0 0 0 1px rgba(#000, 0.15), 0 8px 30px -5px rgba(#000, 0.7)

    & > ._popup-content
      skin: xb-scroll-x 18px
      max-height: 200px

    & > ._popup-scroll-top,
    & > ._popup-scroll-bottom
      height: ($islands_m / 2)
      position: absolute
      background-color: #fff
      left: 0
      width: 100%
      cursor: pointer
      display: none
      z-index: 2

      &:after
        content: ""
        position: absolute
        border: 4px solid transparent
        clear: both
        margin-left: -4px
        left: 50%

    & > ._popup-scroll-top
      top: 0

      &:after
        border-bottom: 4px solid rgba(#000, 0.3)
        top: -2px

    & > ._popup-scroll-bottom
      bottom: 0

      &:after
        border-top: 4px solid rgba(#000, 0.3)
        top: 2px
