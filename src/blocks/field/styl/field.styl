.xb-field_complex
  kind: field $islands_s $islands_s
  skin: input-box

.xb-field_complex__content
  kind: field-content

.xb-field_complex__controller
  kind: input
  z-index: 9
  width: 100%
  height: 100%

  textarea&
    vertical-align: top
    resize: none

.xb-field_complex__view
  border: 1px solid transparent
  kind: fill -1px
  skin: input-view no-focus

  :not(.is-disabled):focus + &
    skin: input_focus

.xb-field_complex__reset
  kind: field-right 0.5*$islands_s
  skin: icon _remove with-hover
  margin-right: $islands_s * -1
  height: auto

  &:before
    content: " "