match .* xb-core-attrs {
    value = scalar(.)

    if (value == true()) {
        @{name()} = name()

    } else if (name() == 'class') {
        @class += (
            ' '
            value
        )

    } else {
        @{name()} = value
    }
}

match .* xb-core-content {
    if (xb-modernizr('createshadowroot')) {
        <content></content>
    } else {
        .content
    }
}
