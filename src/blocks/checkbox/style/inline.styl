@require "../../../styl/init"

.xb-checkbox
  font-weight: inherit

  &._size-m
    skin: v3-checkbox \
          (__view '& > ._view') \
          (__icon '& > ._icon') \
          (__text '& > ._label') \
          (__controller '& > ._controller')

  &._size-l
    skin: v3-checkbox (_size large) \
          (__view '& > ._view') \
          (__icon '& > ._icon') \
          (__text '& > ._label') \
          (__controller '& > ._controller')

  &._disabled
    kind: disabled 0.6
