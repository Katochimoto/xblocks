{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Button",
    "description": "Button params",
    "type": "object",
    "properties": {
        "content": {
            "type": "string"
        },
        "attrs": {
            "type": "object",
            "properties": {
                "id": {
                    "description": "The unique identifier for a DOM",
                    "type": "string"
                },
                "name": {
                    "description": "Name of the button",
                    "type": "string"
                },
                "type": {
                    "enum": ["file", "submit", "button"]
                },
                "xb-size": {
                    "enum": ["s", "m", "l"],
                    "default": "m"
                },
                "xb-theme": {
                    "enum": ["dark", "normal", "action", "pseudo"],
                    "default": "normal"
                },
                "class": {
                    "description": "Class of the button",
                    "type": "string"
                },
                "href": {
                    "description": "Href of the button",
                    "type": "string"
                },
                "target": {
                    "description": "Target of the button",
                    "type": "string"
                },
                "xb-ico": {
                    "description": "Ico of the button",
                    "type": "string"
                },
                "disabled": {
                    "description": "",
                    "type": "boolean"
                },
                "multiple": {
                    "description": "",
                    "type": "boolean"
                }
            }
        }
    },
    "required": []
}