@import '_skin-dark'

$skin-islands-button-content = '.xb-button__text'
$skin-islands-button-disabled = '.is-disabled'

// Обычная кнопка
.xb-button_theme_normal
  kind: button
  skin: button

  // Маленькая обычная кнопка
  &.xb-button_size_s
    skin: button small

    &.xb-button_checked
      skin: button_checked

  &.xb-button_checked
    skin: button_checked

  &.is-disabled
    skin: disabled


// Промо кнопка
.xb-button_theme_promo
  kind: button
  skin: promo-button

  // Маленькая промо кнопка
  &.xb-button_size_s
    skin: promo-button small

    &.xb-button_checked
      skin: button_checked

  // Большая промо кнопка
  &.xb-button_size_l
    skin: promo-button large

    &.xb-button_checked
      skin: button_checked

  // Очень большая промо кнопка
  &.xb-button_size_xl
    skin: promo-button xlarge

    &.xb-button_checked
      skin: button_checked

  &.xb-button_checked
    skin: button_checked

  &.is-disabled
    skin: disabled




// Летающая кнопка
.xb-button_flying
  skin: button fly

  // Маленькая летающая кнопка
  &.xb-button_size_s
    skin: button fly small

    &.xb-button_checked
      skin: button_checked fly

  &.xb-button_checked
    skin: button_checked fly


  &.xb-button_theme_promo
    skin: promo-button fly

    // Маленькая промо кнопка
    &.xb-button_size_s
      skin: promo-button fly small

      &.xb-button_checked
        skin: button_checked

    // Большая промо кнопка
    &.xb-button_size_l
      skin: promo-button fly large

      &.xb-button_checked
        skin: button_checked

    // Очень большая промо кнопка
    &.xb-button_size_xl
      skin: promo-button fly xlarge

      &.xb-button_checked
        skin: button_checked

    &.xb-button_checked
      skin: button_checked

  &.is-disabled
    skin: disabled






// Кнопка-действие
.xb-button_theme_action
  kind: button
  skin: action-button

  // Маленькая кнопка-действие
  &.xb-button_size_s
    skin: action-button small

    &.xb-button_checked
      skin: button_checked

  &.xb-button_checked
    skin: button_checked

  &.is-disabled
    skin: disabled



// Темная кнопка
.xb-button_theme_dark
  kind: button
  skin: dark-button

  // Little black --dress-- button
  &.xb-button_size_s
    skin: dark-button small

    &.xb-button_checked
      skin: button_checked

  &.xb-button_checked
    skin: button_checked

  &.is-disabled
    skin: disabled



// Псевдо-кнопка
.xb-button_theme_pseudo
  kind: button
  skin: pseudo-button
  padding: 5px 15px

  // Маленькая псевдо-кнопка
  &.xb-button_size_s
    skin: pseudo-button small
    padding: 5px 13px

    &.xb-button_checked
      skin: button_checked

  &.xb-button_checked
    skin: button_checked

  &.is-disabled
    skin: disabled


// Кнопка аттача

.nb-file-intruder
  kind: file-intruder \
  (-inner '&__inner') \
  (-input '&__input') \
  (-focus '&__focus' 'islands-button_focus_style')

