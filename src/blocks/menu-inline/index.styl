@require "../../styl/init"

xb-menu-inline
  skin: xb-inline-block

  & > ._popup
    kind: block
    skin: isle
    overflow: hidden
    padding: 0
    outline: none

    touch-action: none
    -webkit-touch-callout: none
    touch-callout: none
    user-select: none
    text-size-adjust: none

    &:before,
    &:after
      margin: 0
      display: none

    &:focus
      box-shadow: 0 0 0 1px rgba(#000, 0.2)

    & > ._popup-content
      skin: xb-scroll-x 18px

    & > ._popup-scroll-top
      skin: xb-scroll-control-top

    & > ._popup-scroll-bottom
      skin: xb-scroll-control-bottom
